      </None>
    </ItemGroup>

    <ItemGroup>
      <None Remove="skyapm.json" />
      <Content Include="skyapm.json">
        <CopyToOutputDirectory>Always</CopyToOutputDirectory>
      </Content>
    </ItemGroup>

</Project>
